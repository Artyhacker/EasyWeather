<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/city_name_edit"
        android:hint="请输入城市名,留空快速查询本地"/>


    <!--<AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/auto_complete_text"
        android:hint="请输入城市名,留空快速查询本地"
        android:completionThreshold="1"/>-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/receive_btn"
        android:text="查询"
        android:layout_marginBottom="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城市："
            android:textSize="30dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/city_name_id"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动查询"
            android:layout_marginRight="10dp"
            android:id="@+id/auto_check_box"
            android:textSize="15dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="实时天气："
        android:textSize="25dp"
        android:id="@+id/weather_text_id"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="实时温度："
        android:textSize="25dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/temperature_id"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="今天天气："
        android:textSize="25dp"
        android:id="@+id/today_weather_text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="今天温度："
        android:textSize="25dp"
        android:id="@+id/today_temperature"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="明天天气："
        android:textSize="25dp"
        android:id="@+id/tomorrow_weather_text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="明天温度："
        android:textSize="25dp"
        android:id="@+id/tomorrow_temperature"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="后天天气："
        android:textSize="25dp"
        android:id="@+id/aftertomorrow_weather_text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="后天温度："
        android:textSize="25dp"
        android:id="@+id/aftertomorrow_temperature"/>

</LinearLayout>
